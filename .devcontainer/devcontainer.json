{
    "name": "Aerial Framework",
    "dockerComposeFile": "../container/compose.yaml",
    "service": "aerial-framework-base",
    "workspaceFolder": "/opt/nvidia/aerial-framework",
    "overrideCommand": false,
    "shutdownAction": "none",
    "remoteUser": "aerial",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow",
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools"
            ],
            "settings": {
                "jupyter.kernels.filter": [],
                "terminal.integrated.cwd": "/opt/nvidia/aerial-framework"
            }
        }
    },
    
    "postAttachCommand": "bash /etc/profile.d/banner.sh"
}
